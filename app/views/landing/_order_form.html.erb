<%= form_for Order.new, remote: true, html: {class: "ask_form"} do |f| %>
<%= f.text_field :name, placeholder:
    "имя", required: true %>
<%= f.text_field :phone, placeholder:
    "номер телефона", required: true %>
<%= f.text_area :question, value: "ВОПРОС", size: "30x10" %>
<%= f.submit "спросить у эксперта" %>
<% end %>
